<!doctype html>
<html lang="en">
  <head>
    <title>Title</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="/styles/home.css">
    <!-- Bootstrap CSS -->
  </head>
  <body>
      <nav >
        <%- include("./partials/header",{user:user}) %>
      </nav>


      <div class="p-item" id="p-item">
        <div class="d-flex justify-content-between">
            <h3>Cart Items</h3>
            <a href="/home" class="btn btn-primary" >Go to home</a>
          </div>
  
          <% if (items.length<1) { %>
              <p style="text-align: center; margin-top: 20px; font-style: italic; font-size: 25px;">Nothing in the cart</p>
          <% } %>
        <% for( let i = 0; i < product.length; i++ ) { %>
          <% if (items){ %>
            <% var flag=0; %>
            <% var q=1; %>
            <% for( let j = 0; j < items.length; j++ ) { %>
                <% if (product[i].product_id==items[j].product_id) { %>
                  <% q=items[j].quantity; %>
                    <% flag=1; %>
                <% } %>
            <% } %>
            <% if (flag){ %>
              <div class="d-flex align-items-center items" id="<%= product[i].product_id %>" seller="<%= product[i].seller %>" quantity="<%= product[i].quantity%>">
                <div class="d-flex align-items-center" style="width: 50%;">
                    <img src="<%= product[i].product_id %>" alt="" width="20%" height="40%">
                    <div>
                      <h4><%= product[i].name%></h4>
                      <h5>Price: <%= product[i].price%></h5>
                    </div>
                </div>
                <div style="display: flex; justify-content: space-around; width: 40%;" id="myPopup">
                    <div class="popup" >Details
                        <span class="popuptext" ><%= product[i].description%></span>
                      </div>
                      <div>
                        Quantity 
                        <span id="<%= product[i].product_id %>quan"><%= q%></span>
                        <a class="btn btn-secondary plus">+</a>
                        <a class="btn btn-secondary minus">-</a>
                      </div>
                    <a class="btn btn-danger delete" id="<%= product[i].product_id %>">Delete</a>
                    <span id="stock"></span>
                </div>
            </div>
           <% } %>
          <%}%>
           
        <%}%>
            
        <% if (items.length>0) { %>
          <div class="d-flex justify-content-end p-4">
            <button class="btn btn-success" id="checkout">Checkout</button>
          </div>
      <% } %>
      </div>
      
    
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="/js/home.js"></script> 
    <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
  </body>
</html>